{% comment %}
  Renders a megamenu for the header.

  Usage:
  {% render 'header-mega-menu' %}
{% endcomment %}

{% style %}
  /* .dropdown-menu {
    position: relative;
    display: block;
  } */

  .dropdown-content {
    display: none;
    /* position: absolute;
    width: max-content;
    z-index: 1; */
    padding: 0
  }

  .dropdown-menu:hover .dropdown-content { display: block; }
  .list-menu, .dropdown-menu { height: 100% }
  .dropdown-menu { align-content: center; }
  .dropdown-menu > *:first-child { font-weight: bold } 

  .submenu { 
    border-top: 1px solid;
    border-bottom: 1px solid;
    border-left: 0.2px solid;
    border-right: 0.2px solid;
    padding: 30px;
   }

  .header__inline-menu {
    height: 62px;
  }

  @media screen and (min-width: 750px) {
    .header__inline-menu {
      height: 82px;
    }
  }
{% endstyle %}

{% liquid
  assign shop_images = images | slice: 0
  assign about_images = images | slice: 1, 2
%}

<nav class="header__inline-menu">
  <ul class="list-menu list-menu--inline" role="list">
    {%- for link in section.settings.menu.links -%}
      <li>
        {%- if link.links != blank -%}
          {% comment %} <header-menu>
            <details id="Details-HeaderMenu-{{ forloop.index }}" class="mega-menu dropdown-menu"> {% endcomment %}
            <div id="Details-HeaderMenu-{{ forloop.index }}" class="mega-menu dropdown-menu">
              {% comment %} <summary
                id="HeaderMenu-{{ link.handle }}"
                class="header__menu-item list-menu__item link focus-inset"
              >
                <span
                  {%- if link.child_active %}
                    class="header__active-menu-item"
                  {% endif %}
                >
                  {{- link.title | escape -}}
                </span>
              </summary> {% endcomment %}
              <a
                id="HeaderMenu-{{ link.handle }}"
                href="{{ link.url }}"
                class="header__menu-item list-menu__item link link--text focus-inset"
                {% if link.current %}
                  aria-current="page"
                {% endif %}
              >
                <span
                  {%- if link.current %}
                    class="header__active-menu-item"
                  {% endif %}
                >
                  {{- link.title | escape | upcase -}}
                </span>
              </a>
              {% comment %} <div
                id="MegaMenu-Content-{{ forloop.index }}"
                class="mega-menu__content color-{{ section.settings.menu_color_scheme }} gradient motion-reduce global-settings-popup dropdown-content"
                tabindex="-1"
              > {% endcomment %}
              <div id="MegaMenu-Content-{{ forloop.index }}"
                class="mega-menu__content color-{{ section.settings.menu_color_scheme }} gradient motion-reduce dropdown-content"
              >
                {% assign link_title = link.title | downcase %}
                <ul
                  class="mega-menu__list page-width{% if link.levels == 1 %} mega-menu__list--condensed{% endif %}"
                  role="list"
                  style="padding: 0; display: grid; gap: 0; grid-template-columns: {% if link_title == 'shop' %}repeat(4,1fr);{% else %}repeat(3,1fr);{% endif %}"
                >
                  {% if link_title != 'shop' %}<div class="submenu">{% endif %}
                    {%- for childlink in link.links -%}
                    {% if link_title == 'shop' %}<div class="submenu">{% endif %}
                      <li>
                        <a
                          id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}"s
                          href="{{ childlink.url }}"
                          class="mega-menu__link mega-menu__link--level-2 link{% if childlink.current %} mega-menu__link--active{% endif %}"
                          {% if childlink.current %}
                            aria-current="page"
                          {% endif %}
                        >
                          {{ childlink.title | escape | upcase }}
                        </a>
                        {%- if childlink.links != blank -%}
                          <ul class="list-unstyled" role="list">
                            {%- for grandchildlink in childlink.links -%}
                              <li>
                                <a
                                  id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}-{{ grandchildlink.handle }}"
                                  href="{{ grandchildlink.url }}"
                                  class="mega-menu__link link{% if grandchildlink.current %} mega-menu__link--active{% endif %}"
                                  {% if grandchildlink.current %}
                                    aria-current="page"
                                  {% endif %}
                                >
                                  {{ grandchildlink.title | escape | upcase }}
                                </a>
                              </li>
                            {%- endfor -%}
                          </ul>
                        {%- endif -%}
                      </li>
                    {% if link_title == 'shop' %}</div>{% endif %}
                    {%- endfor -%}
                  {% if link_title != 'shop' %}</div>{% endif %}
                  {% liquid 
                    if link_title == 'shop'
                      assign submenu_images = shop_images
                    else
                      assign submenu_images = about_images
                    endif
                  %}
                  {% for image in submenu_images %}
                    <a href={{ image.settings.link }} style="text-decoration: none" class="full-unstyled-link">
                      <div class="submenu" 
                        style="background-image: url({{ image.settings.image | image_url: height: 400 }}); height: 400px; display: flex; align-items: end; flex-direction: column;"
                      >
                        <div style="color: black; font-size: 4rem">{{ image.settings.heading }}</div>
                        <div style="color: black; font-size: 2rem">{{ image.settings.subheading }}</div>
                      </div>
                    </a>
                    
                  {% endfor %}
                </ul>
              </div>
            </div>
            {% comment %} </details> {% endcomment %}
          {% comment %} </header-menu> {% endcomment %}
        {%- else -%}
          <a
            id="HeaderMenu-{{ link.handle }}"
            href="{{ link.url }}"
            class="header__menu-item list-menu__item link link--text focus-inset dropdown-menu"
            {% if link.current %}
              aria-current="page"
            {% endif %}
          >
            <span
              {%- if link.current %}
                class="header__active-menu-item"
              {% endif %}
            >
              {{- link.title | escape | upcase -}}
            </span>
          </a>
        {%- endif -%}
      </li>
    {%- endfor -%}
  </ul>
</nav>
